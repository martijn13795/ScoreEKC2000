{
  "entrypoint": "index.html",
  "shell": "src/ekc-app/ekc-app.html",
  "fragments": [
    "src/pages/page-404.html",
    "src/pages/page-manage-scoreboard.html",
    "src/pages/page-score-overview.html",
    "src/pages/page-scoreboard.html",
    "src/pages/page-start-scoreboard.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "scripts/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "builds": [{
    "name": "default",
    "bundle": true,
    "js": {"compile": true},
    "css": {"minify": true},
    "html": {"minify": true},
    "addServiceWorker": true
  }],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}
